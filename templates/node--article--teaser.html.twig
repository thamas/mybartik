{% extends "node--article.html.twig" %}
{#
/**
 * @file
 * Theme override to display an article teaser.
 */
#}

{% block node %}
  <article{{ attributes.addClass(classes, 'clearfix' ) }}>


    {{ content.field_image }}


    {% block submitted %}
      {{ parent() }}
    {% endblock %}



    {{ title_prefix }}
    {% if not page %}
    <h2{{ title_attributes .addClass(title_classes)}}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
    {% endif %}
    {{ title_suffix }}


    {% block content %}
      {{ parent() }}
    {% endblock %}


  </article>
{% endblock %}
