{% extends "node--article.html.twig" %}
{#
/**
 * @file
 * Theme override to display an article teaser.
 */
#}

{% block node %}
  {# Add a class. #}
  <article{{ attributes.addClass(classes, 'clearfix' ) }}>

    {# Display image field here, before node title. #}
    {{ content.field_image }}

    {# Display submitted date before title too, but using the same settings as
    in parent template. #}
    {% block node_submitted %}
      {{ parent() }}
    {% endblock %}

    {# Display other twig blocks using the same settings as in parent template. #}
    {% block node_title %}
      {{ parent() }}
    {% endblock %}

    {% block node_content %}
      {{ parent() }}
    {% endblock %}

    {# Create custom read more link using "path" function.
    Default link section is removed in parent template.  #}
    <a href="{{ path('entity.node.canonical', { 'node': node.id}) }}">{{ 'Continue reading Â»'|t }}</a>

  </article>
{% endblock %}
